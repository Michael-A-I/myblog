<body>
    <div class="container">
    <!-- content -->
        <h1 class="mb-4 bg-primary rounded border-secondary">Register</h1>
        <form action="/login/register" method="post">
            <div class="form-group">
                <label for="name">Name</label>
                <input required type="text" name="name" id="name" class="form-control" value="" >
                <!-- <small id="helpId" class="text-muted">Help text</small> -->

                <label for="email">Email</label>
                <input required type="email" name="email" id="email" class="form-control" value="" >
                <!-- <small id="helpId" class="text-muted">Help text</small> -->

                <label for="password">Password</label>
                <input required type="password" name="password" id="password" class="form-control" value="" >
                <!-- <small id="helpId" class="text-muted">Help text</small> -->
              </div>      
              <button class="btn btn-success" type="submit">Register</button>        
        </form>
                <a href="/login" class="btn mt-4 btn-danger">Login</a>
    </div>

</body>
</html>

